<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <color android:color="#ffffff" />
    </item>

    <item
        android:id="@+id/color_rect"
        android:top="250dp"
        android:bottom="-450dp"
        android:left="120dp"
        android:right="-110dp">
        <rotate
            android:fromDegrees="20"
            android:pivotX="450%"
            android:pivotY="-20%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/color_choose_plan_green_bottom"/>
            </shape>
        </rotate>
    </item>
</layer-list>