<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/colorlightgray"/>
    <item>
        <color android:color="@color/cardview_dark_background"></color>
        <!--<bitmap android:src="@drawable/download"
            android:gravity="center" android:alpha="0.3"/>-->
    </item>

    <item android:top="200dp"
        android:bottom="-200dp"
        android:left="0dp"
        android:right="-200dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#ffffff"/>
            </shape>
        </rotate>
    </item>
</layer-list>