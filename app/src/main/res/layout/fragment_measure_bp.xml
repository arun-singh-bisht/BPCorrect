<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/app_bar_custom"/>

    <RelativeLayout
        android:id="@+id/view_reading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center_vertical"
        >


        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content"
            app:rb_color="#1F9DC9"
            app:rb_radius="37dp"
            app:rb_rippleAmount="5"
            app:rb_duration="3000"
            android:visibility="visible"
            app:rb_scale="6">


        </com.skyfishjy.library.RippleBackground>

    <com.protechgene.android.bpconnect.Utils.TitilliumWebBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_above="@+id/text_bp_reading"
        android:layout_centerHorizontal="true"
        />

    <com.protechgene.android.bpconnect.Utils.TitilliumWebBoldTextView
        android:id="@+id/text_bp_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/view_center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/view_center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle"
        android:gravity="center"
        android:layout_centerInParent="true"
        >

        <com.protechgene.android.bpconnect.Utils.TitilliumWebTextView
            android:id="@+id/text_heart_rate_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_icon"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>


        <!--Wait for one min. view-->
        <RelativeLayout
            android:id="@+id/view_wait"
            android:layout_below="@+id/view_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_buttons_sign_in"
            android:visibility="gone">


            <com.protechgene.android.bpconnect.Utils.TitilliumWebTextView
                android:id="@+id/text_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's wait one minute and repeat\nthe measurement"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="15sp"
                android:visibility="visible"
               android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:layout_below="@+id/text_wait"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <io.feeeei.circleseekbar.CircleSeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:wheel_max_process="60"
                    app:wheel_reached_color="#2FE237"
                    app:wheel_unreached_color="@color/bp_gray"
                    app:wheel_reached_width="10dp"
                    app:wheel_unreached_width="10dp"
                    app:wheel_pointer_color="#2FE237"
                    app:wheel_can_touch="false"
                    app:wheel_scroll_only_one_circle="true"
                    app:wheel_cur_process="60"
                    android:padding="15dp"
                    />

                <com.protechgene.android.bpconnect.Utils.TitilliumWebBoldTextView
                    android:id="@+id/text_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="59"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <!--Done Button-->
        <com.protechgene.android.bpconnect.Utils.TitilliumWebBoldTextView
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:gravity="center"
        android:textSize="@dimen/get_a_pay_text_size"
        android:background="@drawable/round_bg_textview"
        android:textColor="#ffffff"
        android:paddingBottom="@dimen/sign_in_button_padding"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="@dimen/sign_in_button_padding"
        android:layout_marginTop="@dimen/margin_between_buttons_sign_in"
        android:visibility="gone"
        android:layout_below="@+id/view_center"
        android:layout_centerHorizontal="true"
        />

        <!--Data Transfer status text-->
        <com.protechgene.android.bpconnect.Utils.TitilliumWebTextView
            android:id="@+id/text_transfer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searching for data..."
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_center"
            android:layout_marginTop="@dimen/margin_between_buttons_sign_in"
            />

    </RelativeLayout>

</LinearLayout>