<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:background="@color/bp_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_bg"
            android:adjustViewBounds="true"/>

        <RelativeLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="10dp" >


            <ImageButton
                android:id="@+id/image_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_menu"
                android:padding="10dp"
                android:visibility="visible" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_40sdp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/image_profile_pic"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/default_pic"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="1dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.1"
                    />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    card_view:layout_constraintBottom_toBottomOf="@id/image_profile_pic"
                    card_view:layout_constraintHorizontal_bias="0.32"
                    card_view:layout_constraintLeft_toRightOf="@id/image_profile_pic"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintTop_toTopOf="@id/image_profile_pic">

                    <com.protechgene.android.bpconnect.Utils.TitilliumWebTextView
                        android:id="@+id/text_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark Henery"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_marginRight="3dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_mail"/>


                        <com.protechgene.android.bpconnect.Utils.TitilliumWebTextView
                            android:id="@+id/text_profile_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="Mark.henery@gmail.com"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_measure_bp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/messure_bp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Measure Blood\nPressure"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/_11sdp"
                    />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_readings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                card_view:cardElevation="5dp"
                card_view:contentPadding="10dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/bp_readings"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Blood Pressure\nReadings"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="12dp"
                        android:textSize="@dimen/_11sdp"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_learn"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/learn"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_11ssp"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_devices"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/manage_devices"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Devices"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_11ssp"
                        />
                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_reminder"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/bp_readings"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminders"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_11ssp"
                        />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_settings"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                card_view:contentPadding="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/bp_readings"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_11ssp"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</ScrollView>